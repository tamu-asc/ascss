{
  "openapi": "3.0.0",
  "info": {
    "title": "Swagger Admin App",
    "description": "Use this to do the swagger ui for admin",
    "contact": "utkarshc@tamu.edu",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "/api/admin",
      "description": "The swag swagger for admin"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "Unauthorized, refresh the token"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/create": {
      "post": {
        "summary": "Create the admin object",
        "requestBody": {
          "description": "This will work only for the first time when you need to create the admin object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
                    "properties": {
                      "first_name": {
                        "type": "string",
                        "description": "First Name"
                      },
                      "last_name": {
                        "type": "string",
                        "description": "Last Name"
                      },
                      "username": {
                        "type": "string",
                        "description": "A unique user name, preferably UIN"
                      },
                      "email": {
                        "type": "string",
                        "description": "Email id of admin"
                      },
                      "password": {
                        "type": "string",
                        "description": "Password of the admin"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "description": "The created user object"
                    }
                  }
                }
              }
            }

          }
        }
      }
    },
    "/authenticate": {
      "post": {
        "summary": "Get the security token",
        "requestBody": {
          "description": "Add the username and password here",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email id of admin"
                  },
                  "password": {
                    "type": "string",
                    "description": "Email id of admin"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "Copy the token and paste it in the authorization section for subsequent requests"
                    }
                  }
                }
              }
            }

          }
        }
      }
    },
    "/courses": {
      "get": {
        "summary": "Get courses",
        "description": "Get all courses",
        "responses": {
          "200": {
            "description": "A list of courses."
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/course/{courseId}/students": {
      "get": {
        "summary": "Get course enrolled students",
        "description": "Get all the student enrolled in this course",
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of all students.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              },
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/course": {
      "post":{
        "summary": "Create new course for student",
        "requestBody": {
          "description": "Create new course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type" : "object",
                "properties" :{
                  "title": {
                    "type" : "string",
                    "description" : "title of course"
                    },
                  "semester": {
					"type": "string",
					"description": "course semester"
				  },
                  "year" : {
					"type": "int",
					"description" : "year"
				  },
                  "credits" : {
					"type": "int",
					"description" : "no. of credits"
				  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "succes flag",
            "content": {
              "application/json": {
                "schema": {
                  "result" : "OK"
                  }
                }
              }
            }
        }
      }
    },
    "/course/{id}": {
      "patch":{
        "summary": "Update course for student",
        "requestBody": {
          "description": "Update course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
				"type" : "object",
				"properties": {
                "title": {
                    "type" : "string",
                    "description" : "title of course"
                    },
                  "semester": {
					"type": "string",
					"description": "course semester"
				  },
                  "year" : {
					"type": "int",
					"description" : "year"
				  },
                  "credits" : {
					"type": "int",
					"description" : "no. of credits"
				  }
				}
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success flag",
            "content": {
              "application/json": {
                "schema": {
                  "result" : "OK"
                  }
                }
              }
            }
        }
      }
    },
    "/course/{courseId}/student": {
      "post":{
        "summary": "Add student to course",
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "requestBody": {
          "description": "Create new course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
				"type": "object",
				"properties": {
                "user": {
                  "type": "string",
				  "description": "unique username"
                }
				}
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success flag",
            "content": {
              "application/json": {
                "schema": {
                  "result" : "OK"
                  }
                }
              }
            }
        }
      }
    },
    "/course/{courseId}/student_bulk": {
      "post":{
        "summary": "Add student to course bulk call",
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "requestBody": {
          "description": "Create new course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
				"type": "object",
				"properties" : {
                "users": [
                  {
                    "type": "string",
					"description": "unique username"
                  },
                  {
                    "type": "string",
					"description": "unique username"
                  },
                  {
                    "type": "string",
					"description": "unique username"
                  }
                ]
              }
			  }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success flag",
            "content": {
              "application/json": {
                "schema": {
                  "result" : "OK"
                  }
                }
              }
            }
        }
      }
    },
    "/course/{courseId}/leader_bulk": {
      "post":{
        "summary": "Add leader to course bulk call",
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "requestBody": {
          "description": "Create new course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
				"type": "object",
				"properties": {
                "users": [
                  {
                    "type": "string",
					"description": "unique usernames"
                  },
                  {
                    "type": "string",
					"description": "unique usernames"
                  },
                  {
                    "type": "string",
					"description": "unique usernames"
                  }
                ]
              }
			  }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success flag",
            "content": {
              "application/json": {
                "schema": {
                  "result" : "OK"
                  }
                }
              }
            }
        }
      }
    },
    "/course/{courseId}/leader": {
      "post":{
        "summary": "Add leader to course",
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "requestBody": {
          "description": "Create new course",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
				"type": "object",
				"properties": {
                "user": {
                  "type":"string",
				  "description": "unique username"
                }
              }
			  }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success flag",
            "content": {
              "application/json": {
                "schema": {
                  "result" : "OK"
                  }
                }
              }
            }
        }
      }
    },
    "/course/{courseId}/leaders": {
      "get": {
        "summary": "Get course enrolled leaders",
        "description": "Get all the leaders in this course",
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of all Leaders.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              },
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/course/{courseId}/attendance_stats": {
      "post": {
        "summary": "Aggregations for attendance stats",
        "requestBody": {
          "description": "Get aggregations data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type" : "object",
                "properties" :{
                  "aggregate_by": {
                    "type" : "string",
                    "description" : "leader/session/student"
                  },
                  "filters": {
                    "type": "object",
                    "description": "key leader, value leader user name"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "responses": {
          "200": {
            "description": "Aggregations list.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              },
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/course/{courseId}/session_stats": {
      "post": {
        "summary": "Aggregations for session stats",
        "requestBody": {
          "description": "Get aggregations data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type" : "object",
                "properties" :{
                  "aggregate_by": {
                    "type" : "string",
                    "description" : "leader/session"
                  },
                  "filters": {
                    "type": "object",
                    "description": "key leader, value leader user name"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "courseId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Numeric ID for the course"
          }
        ],
        "responses": {
          "200": {
            "description": "Aggregations list.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              },
              "text/csv": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    }
  }
}

